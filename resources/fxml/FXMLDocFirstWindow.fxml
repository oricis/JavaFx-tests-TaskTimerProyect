<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane
    id="AnchorPane"
    prefHeight="200"
    prefWidth="320"

    styleClass="background-blue"
    stylesheets="@../css/firstWindow.css"

    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="javafx.FirstWindowController">
    <children>

        <Label
            fx:id="label"
            layoutX="85"
            layoutY="75.0"
            maxWidth="160"
            minHeight="20"
            minWidth="120"

            style="-fx-underline:true"
            stylesheets="@../css/firstWindow.css"

            textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>

            <!-- applied various styles using classes -->
            <styleClass>
                <String fx:value="border" />
                <String fx:value="font-blue" />
            </styleClass>
        </Label>
        <Button
            fx:id="button"
            layoutX="85"
            layoutY="140"
            maxWidth="160"
            minHeight="20"
            minWidth="160"
            onAction="#openSecondWindow"
            style="-fx-padding: 10"
            text="Open window" />

    </children>
</AnchorPane>

