<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane
    id="AnchorPane"
    prefHeight="250"
    prefWidth="380"

    styleClass="background-pink"
    stylesheets="@../css/secondWindow.css"

    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="javafx.SecondWindowController">
    <children>

        <Label
            fx:id="label"
            layoutX="95"
            layoutY="75.0"
            maxWidth="200"
            minHeight="20"
            minWidth="200"

            style="-fx-underline:true"
            stylesheets="@../css/secondWindow.css"

            textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>

            <!-- applied various styles using classes -->
            <styleClass>
                <String fx:value="border" />
                <String fx:value="font-pink" />
            </styleClass>
        </Label>

        <Button fx:id="button"
            layoutX="50"
            layoutY="140"
            onAction="#closeWindow"
            text="Cerrar Ventana" />

        <Button fx:id="closeButton"
            layoutX="160"
            layoutY="140"
            onAction="#closeWindow2"
            text="Cerrar Ventana" />

        <Button fx:id="closeButtonNew"
            layoutX="270"
            layoutY="140"
            onAction="#closeWindow3"
            text="Cerrar Ventana" />

    </children>
</AnchorPane>

